#include <stdio.h>

void main(){   
    
    int a;
    scanf("%d", &a);
    if(a >= 30){
        printf("너무 더워요! 반팔과 반바지를 입으세요.");
    }else if(25 <= a && a <= 29){
        printf("따뜻한 날씨입니다! 가벼운 옷을 입으세요.");
    }else if(15 <= a && a <= 24){
        printf("따뜻한 날씨입니다! 가벼운 옷을 입으세요.");
    }else if(5 <= a && a <= 14){
        printf("따뜻한 날씨입니다! 가벼운 옷을 입으세요.");
    }else if(0 <= a && a <= 5){
        printf("따뜻한 날씨입니다! 가벼운 옷을 입으세요.");
    }else{
        printf("한파 경고! 패딩과 장갑, 모자를 착용하세요.");
    }    
}
