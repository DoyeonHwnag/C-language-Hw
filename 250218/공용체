#include <stdio.h>

void main() {
    union Value {
        int intVal;
        float floatVal;
        char charVal;
    };
    
    union Value v;
    
    printf("intVal: ");
    scanf("%d", &v.intVal);
    printf("floatVal: ");
    scanf("%f", &v.floatVal);
    printf("charVal: ");
    scanf("%c", &v.charVal); 
    
    printf("%d %d\n", v.intVal, &v.intVal);
    printf("%f %d\n", v.floatVal, &v.floatVal);
    printf("%c %d", v.charVal, &v.charVal);
}
